{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "outDir": "./build",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": ["ES5", "DOM", "ES2015.Promise", "ES2015.Collection"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ]
}
